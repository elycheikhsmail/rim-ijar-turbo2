 
{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true, 
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
     "outDir": "dist",
    "baseUrl": ".",
     "paths": {
      "@repo/*": [
        "packages/*/src",
        "packages/*"
      ]
    },
  },
 
  "include": ["src/**/*", "components/**/*", "index.ts", "src/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
